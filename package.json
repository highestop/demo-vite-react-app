{
  "name": "demo-vite-react-app",
  "version": "0.0.0",
  "packageManager": "pnpm@7.3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/highestop/demo-react-app-vite.git"
  },
  "private": true,
  "engines": {
    "node": "=16",
    "pnpm": "=7"
  },
  "scripts": {
    "start": "vite",
    "test": "pnpm exec jest",
    "lint": "pnpm exec eslint . --ext .ts,.tsx --cache",
    "lint-staged": "pnpm exec lint-staged --verbose",
    "build": "pnpm run build:development",
    "build:development": "tsc && vite build --mode development",
    "build:production": "tsc && vite build --mode production"
  },
  "dependencies": {
    "@testing-library/react": "^13.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-router-dom": "^6.3.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.35",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.5",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "@vitejs/plugin-react-refresh": "^1.3.2",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.2.2",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "jest": "^27",
    "jest-junit": "^13.2.0",
    "jest-transform-stub": "^2.0.0",
    "less": "^4.1.2",
    "lint-staged": "^12.4.2",
    "prettier": "^2.6.2",
    "ts-jest": "^27",
    "ts-node": "^10.8.0",
    "tslib": "^2.4.0",
    "typescript": "^4.7.2",
    "vite": "^2.9.9"
  },
  "jest-junit": {
    "outputDirectory": "out/Test",
    "outputName": "junit.xml"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{html,css,scss,less,json,svg,yml,yaml}": [
      "prettier --write"
    ]
  }
}
